{
 "swagger": "2.0",
 "info": {
     "version": "V1",
     "title": " Fundoo App",
     "description": "CLI App API"
 },
 "host": "localhost:3000",
 "basePath": "/api/v1/",
 "tags": [
     {
         "name": "CLI",
         "description": "Creating user......."
     }
 ],
 "schemes": [
     "http"
 ],
 "consumes": [
     "application/json"
 ],
 "produces": [
     "application/json"
 ],
 "paths": {
     "/users/register": {
         "post": {
             "tags": ["users"],
             "description": "register new user",
             "parameters": [
                 {
                     "name": "Create new user",
                     "in": "body",
                     "description": "registering user",
                     "schema": {
                         "$ref": "#/definitions/User"
                     }
                 }
             ],
             "produces": [
                 "application/json"
             ],
             "responses": {
                 "201": {
                     "description": "New user is created"
                 },
                 "500": {
                     "description": "Internal server error"
                 }
             }
         }
     },
     "/users/login": {
         "post": {
             "tags": ["users"],
             "description": "login name...",
             "parameters": [
                 {
                    "name": "login user",
                     "in": "body",
                     "description": "login",
                     "schema": {
                         "$ref": "#/definitions/login"
                     }
                 }
             ],
             "produces": [
                 "application/json"
             ],
             "responses": {
                 "201": {
                     "description": "New user is created successfully"
                 },
                 "500": {
                     "description": "Internal server error"
                 }
             }
         }
     },
     "/users/forgotpassword": {
        "post": {
            "tags": ["users"],
            "description": "reset link to update password",
            "parameters": [
                {
                   "name": "forgotpassword",
                    "in": "body",
                    "description": "forgotpassword",
                    "schema": {
                        "$ref": "#/definitions/forgotpassword"
                    }
                }
            ],
            "produces": [
                "application/json"
            ],
            "responses": {
                "201": {
                    "description": "reset password link sent successfully"
                },
                "500": {
                    "description": "Internal server error"
                }
            }
        }
    }
 },
 "definitions": {
     "User": {
         "type": "object",
         "properties": {
             "firstname": {
                 "type": "string"
             },
             "lastname": {
                 "type": "string"
             },
             "email": {
                 "type": "string"
             },"password": {
                 "type": "string"
             }
         }
     },
     "login":{
       "type": "object",
             "properties": {
                 "email": {
                     "type": "string"
                 },"password": {
                     "type": "string"
                 }
             }
     },
     "forgotpassword":{
        "type": "object",
              "properties": {
                  "email": {
                      "type": "string"
                  } 
              }
      }
 }
}


                
